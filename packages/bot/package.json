  "bugs": {
    "url": "https://github.com/oursky/gitlint-bot/issues"
  },
  "homepage": "https://github.com/oursky/gitlint-bot#readme",
  "dependencies": {
    "@sentry/integrations": "5.17.0",
    "@sentry/node": "5.17.0",
    "@slack/events-api": "2.3.3",
    "@slack/webhook": "5.0.3",
    "express": "4.17.1",
    "knex": "0.21.1",
    "node-cron": "2.0.0",
    "pg": "8.2.1",
    "probot": "9.11.3",
    "tslib": "2.0.0",
    "@gitlint-bot/lint": "1.0.0"
  },
  "devDependencies": {
