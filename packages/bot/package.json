    "@types/node": "14.0.5",
    "@types/node-cron": "2.0.3",
    "dotenv": "8.2.0",
    "fast-check": "1.24.2",
    "jest": "26.0.1",
    "nock": "12.0.3",
    "nodemon": "2.0.4",
    "smee-client": "1.1.0",
    "ts-jest": "26.0.0",
    "ts-node": "8.10.2",
    "typescript": "3.9.3",
    "rimraf": "3.0.2"
  }
