{
  "name": "gitlint-bot",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "license": "Apache-2.0",
  "repository": "https://github.com/oursky/gitlint-bot.git",
  "homepage": "https://github.com/oursky/gitlint-bot",
  "bugs": "https://github.com/oursky/gitlint-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint-fix": "eslint 'src/**/*.ts' --fix",
    "check-format": "prettier 'src/**/*.ts' -l",
    "format": "prettier 'src/**/*.ts' --write",
    "migrate": "knex migrate:latest --knexfile=lib/db/knexfile.js",
    "migrate:dev": "knex migrate:latest --knexfile=src/db/knexfile.ts",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "tslib": "2.0.0"
  },
  "devDependencies": {
    "lerna": "3.22.1",
    "typescript": "3.9.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
