{
  "name": "gitlint-bot",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "license": "Apache-2.0",
  "repository": "https://github.com/oursky/gitlint-bot.git",
  "homepage": "https://github.com/oursky/gitlint-bot",
  "bugs": "https://github.com/oursky/gitlint-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "check-format": "prettier src/**/*.ts -l",
    "format": "prettier src/**/*.ts --write",
    "migrations": "knex migrate:latest --knexfile=src/db/knexfile.ts",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@commitlint/parse": "8.3.4",
    "@slack/webhook": "5.0.3",
    "knex": "0.21.1",
    "node-cron": "2.0.3",
    "pg": "8.2.1",
    "probot": "9.11.3",
    "ts-node": "8.10.2",
    "typescript": "3.9.3"
  },
  "devDependencies": {
    "@oursky/eslint-plugin": "3.1.0",
    "@types/jest": "25.2.3",
    "@types/nock": "11.1.0",
    "@types/node": "14.0.5",
    "@types/node-cron": "2.0.3",
    "dotenv": "8.2.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "fast-check": "1.24.2",
    "jest": "26.0.1",
    "nock": "12.0.3",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "smee-client": "1.1.0",
    "ts-jest": "26.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
